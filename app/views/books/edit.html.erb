<div class="edit-box">
 <h1 class="edit-head"><strong>Editing Book</strong></h1>
 
 <p><%= flash[:notice] %></p>
    
        <% if @book.errors.any? %>
        <div class="error-title">
        <%= @book.errors.count %> errors prohibited this book from being saved:
        </div>
        <div class="error-body">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
        <% end %>

 <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

 <div class="edit-body">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>

 <div class="edit-body">
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>

<div class="edit-body"> 
 <%= f.submit 'Update Book' %>
 
 
</div>
 <% end %>

<span class="edit-show"><%= link_to "Show", book_path(@book.id) %></span>

<span><%= link_to "Back", "/books" %></span>
