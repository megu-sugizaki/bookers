<div class="edit-box">
 <h1 class="edit-head"><strong>Editing Book</strong></h1>

 <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

 <div class="edit-body">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>

 <div class="edit-body">
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>

< div class="edit-body"> 
 <%= f.submit 'Update Book' %>
 
</div>
 <% end %>

<span class="edit-show"><%= link_to "Show", book_path(@book.id) %></span>

<span><%= link_to "Back", books_path(@book.id) %></span>
