<div class="body-box">
    <p class="books">Books</p>
    
    <table>
    <thead>
        <tr>
      <th>Title</th>
            <th>Body</th>
            <th> </th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                <p class="body"><%= book.title %></p>
            </td>
            <td>
                <p class="body"><%= book.body %></p>
            </td>
            <td>
                <span class="body"><%= link_to 'Show', book_path(book.id) %></span>
            </td>
            <td>
                <span class="body"><%= link_to 'Edit', edit_book_path(book.id) %></span>
            </td>
            <td>
                <span class="body"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></span>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <div class="create-box">
        <p class="new-book">New book</p>
        
    <p><%= flash[:notice] %></p>
    
        <% if @book.errors.any? %>
        <div class="error-title">
        <%= @book.errors.count %> errors prohibited this book from being saved:
        </div>
        <div class="error-body">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
        <% end %>
 
        <%= form_with model: @book do |f| %>
            <div class="new-title">
            <h4>Title</h4>
        <%= f.text_field :title %> 
            </div>
            
            <div class="new-body">
        <h4>Body</h4>
        <%= f.text_area :body %>
           </div>
    

    <div class="submit">
        <%= f.submit 'Create Book' %>
    </div>
        <% end %>
    </div>

</div>
